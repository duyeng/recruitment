<div class="product-box" style="background-color: #faf8f7; display: flex; margin: 10px; align-items: stretch;">
  <div class="product-image-container" style="flex: 1; text-align: center; padding: 20px;">
    <div class="product-image" style="width: 100px; height: 100px; border-radius: 50%; background-color: #f0f0f0; display: inline-flex; align-items: center; justify-content: center; font-size: 2em; margin-bottom: 10px;">
        <%= product.title[0].upcase %>
    </div>
    <div class="product-title">
      <h3><%= product.title %></h3>
    </div>
  </div>
  <div class="reviews-section" style="flex: 1; display: flex; flex-direction: column; padding: 20px;">
    <div class="product-reviews" style="flex: 1;">
      <%= turbo_frame_tag product.id, src: reviews_list_by_product_url(format: :turbo_stream, product_id: product.id), loading: :lazy do %>
      <% end %>
    </div>
  </div>
</div>
